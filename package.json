{
  "name": "yandex-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "18.19.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit",
      ".\\node_modules\\.bin\\eslint src\\**\\*.{ts,js} --fix",
      "stylelint --fix"
    ]
  },
  "scripts": {
    "dev": "vite --port 3000",
    "start": "tsc && vite build && vite preview --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint",
    "lint:fix": ".\\node_modules\\.bin\\eslint src\\**\\*.{ts,js} --fix",
    "style": "stylelint '**/*{.css,.scss}'",
    "style:fix": "stylelint '**/*{.css,.scss}' --fix",
    "test": "mocha -r jsdom-global/register"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "chai": "^4.3.10",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.2",
    "express": "^4.18.2",
    "handlebars": "4.7.8",
    "husky": "^9.0.10",
    "install": "^0.13.0",
    "jsdom": "24.0.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^15.2.2",
    "mocha": "^10.2.0",
    "mock-handlebars-loader": "^1.0.3",
    "npm": "^10.2.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "sinon": "^16.1.3",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "nanoid": "^4.0.2",
    "stylelint-scss": "^6.0.0"
  }
}
