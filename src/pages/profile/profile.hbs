<div class="profile">
    <div class="profile__back">
        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="14" cy="14" r="14" transform="rotate(-180 14 14)" fill="#3369F3"/>
            <rect x="20" y="14.8" width="11" height="1.6" transform="rotate(-180 20 14.8)" fill="white"/>
            <path d="M13 19L9 14L13 9" stroke="white" stroke-width="1.6"/>
        </svg>
    </div>
    <div class="profile__wrapper">
        <div class="profile__content">
            <div class="profile__ava">
                <img src="/img/ava-default.png" alt="">
                <div class="profile__avaHov">Поменять аватар</div>
            </div>
            <div class="profile__name">Иван</div>
            <ul class="profile__infoList">
                {{> ProfileItem name="Почта" value="pochta@yandex.ru"}}
                {{> ProfileItem name="Логин" value="ivanivanov"}}
                {{> ProfileItem name="Имя" value="Иван"}}
                {{> ProfileItem name="Фамилия" value="Иванов"}}
                {{> ProfileItem name="Имя в чате" value="Иван"}}
                {{> ProfileItem name="Телефон" value="+7 (909) 967 30 30"}}
            </ul>
            <div class="profile__actions">
                {{> Link label="Изменить данные" class="profile__link" page="edit-profile"}}
                {{> Link label="Изменить пароль" class="profile__link" page="change-password"}}
                {{> Link label="Выйти" class="profile__link profile__link_red" page="login"}}
            </div>
        </div>
    </div>
</div>
 